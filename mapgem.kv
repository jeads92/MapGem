<EntryScreen>
    cols: 1
    
    Button:
        text: 'New User'
        on_press: root.to_newuser()
        
    Button:
        text: 'Login'
        on_press: root.to_userlogin()
        
    Button:
        text: 'Skip Login'
        on_press:
            #root.manager.transition.direction = 'right'
            root.to_mainmenu()
        

<UserLogin>
    name1: name
    password1: password
    cols: 2

    Label:
        text: 'Login to Account'

    Label:
        text: ''
    
    Label:
        text: 'Username'

    TextInput:
        id: name
        multiline: False
        
    Label:
        text: 'Password'

    TextInput:
        id: password
        multiline: False
        password: True
        
    Button:
        text: 'Submit'
        on_press: root.to_mainscreen()
    Button:
        text: 'Go back to Entry Screen'
        on_press: root.to_entryscreen()


<NewAccount>
    cols: 2
    Label:
        text: 'Create New Account'
    Label:
        text: ''
        
    Label:
        text: 'Username'

    TextInput:
        multiline: False
    
    Label:
        text: 'Password'

    TextInput:
        multiline: False
        password: True

    Button:
        text: 'Submit'
        on_press: root.to_mainmenu()
    

<MainScreen>
    cols: 1

    Button:
        text: 'Create New Maps'
        on_press: root.to_editmap()

    Button:
        text: 'View Maps'
        on_press: root.to_viewmaps()

    Button:
        text: 'Options'
        on_press: root.to_options()
        
<Options>
    cols: 1

    
    Label:
        text: 'Options Screen'
    
    Button:
        text: 'Upload Tiles'
        
    Button:
        text: 'Create Tiles'
        
    Button:
        text: 'View Tiles'
    
<EditMap>
    cols: 5
    rows: 5
    
    Label:
        text: 'Selected'
        
    Button:
        text: 'Plants'
        
    Button:
        text: 'Construction'
        
    Button:
        text: 'Landscape'
        
    Button:
        text: 'Blank'
        
<ViewMaps>
    cols: 2
    
    Label:
        text: 'Map Name'
    Button:
        text: 'Load'
         
