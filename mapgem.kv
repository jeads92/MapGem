<EntryScreen>
    cols: 1
    padding: 100
    
       
    Button:
        text: 'New User'
        on_press: root.to_newuser()

    Button:
        text: 'Login'
        on_press: root.to_userlogin()
        
    Button:
        text: 'Skip Login'
        on_press:
            #root.manager.transition.direction = 'right'
            root.to_mainmenu()
            
        

<UserLogin>
    orientation: 'vertical'
    name1: name
    password1: password
    
    BoxLayout:
        Label:
            text: 'Login to Account'


    GridLayout:
        size_hint_x: 0.5
        pos_hint: {"x":0.25}
        col: 2
        rows: 2
        Label:
            text: 'Username'
    
        TextInput:
            id: name
            multiline: False
            
        Label:
            text: 'Password'
    
        TextInput:
            id: password
            multiline: False
            password: True
        
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {"x":0.25}
        size_hint_y: 0.5
        
        Button:
            size_hint_x: 0.5
            text: 'Submit'
            on_press: root.to_mainscreen()
        Button:
            size_hint_x: 0.5
            text: 'Go back to Entry Screen'
            on_press: root.to_entryscreen()


<NewAccount>
    orientation: 'vertical'

    BoxLayout:
        Label:
            text: 'Create New Account'

    GridLayout:
        size_hint_x: 0.5
        pos_hint: {"x":0.25}
        col: 2
        rows: 2
        Label:
            text: 'Username'
    
        TextInput:
            multiline: False
        
        Label:
            text: 'Password'
    
        TextInput:
            multiline: False
            password: True
            
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {"x":0.25}
        size_hint_y: 0.5
        
        
        Button:
            size_hint_x: 0.5
            text: 'Submit'
            on_press: root.to_mainmenu()
    

<MainScreen>
    cols: 1
    padding: 100

    Button:
        text: 'Create New Maps'
        on_press: root.to_editmap()

    Button:
        text: 'View Maps'
        on_press: root.to_viewmaps()

    Button:
        text: 'Options'
        on_press: root.to_options()
        
<Options>
    orientation: 'vertical'
    Label:
        pos_hint: {'x': 0}
        size_hint_x: 0.5
        text: 'Options Screen'
        
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.5
        pos_hint: {'x': 0}
        
        Label:
            text: 'Tiles'
        Button:
            text: 'Upload Tiles'
            #background_color: 0, 0, 0, 0
                 
        Button:
            text: 'Create Tiles'
            #background_color: 0, 0, 0, 0
        Button:
            text: 'View Tiles'
            #background_color: 0, 0, 0, 0
            
        Label:
            text: 'Audio'
        Button:
            text: 'Turn off audio samples'
        Button:
            text: 'Turn off ost'
        Button:
            text: 'Insert audio'
        
<EditMap>
    cols: 1
    
    BoxLayout:
        size_hint_y: 0.2
        Button:
            text: 'Selected'
        Button:
            text: 'Plants'
        Button:
            text: 'Contruction'
        Button:
            text: 'Landscape'
            
    BoxLayout:
        Label:
            text: 'This will be the map!'
            
        BoxLayout:
            size_hint_x: 0.2
            orientation: 'vertical'
            Button:
                text: ''
            Button:
                text: ''
            Button:
                text: ''
            Button:
                text: 'Load Map'
            Button
                text: 'Map-Gen!'
        
<ViewMaps>
    orientation: 'vertical'

    Button:
        pos_hint: {"x":0.5}
        size_hint_x: 0.5
        size_hint_y: 0.8
        text: 'Load'
            
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Map One'
            Label:
                text: 'Map Two'
            Label:
                text: 'Oakvale'
        BoxLayout:
            Label:
                text: 'The map preview will be here.'
    Button:
        text: 'Go back to Main Screen'
        on_press: app.entry_screen.to_mainmenu()
         
